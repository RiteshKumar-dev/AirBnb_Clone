<% layout("/layouts/boilerplate") %>
    <div class="SignupContainer">
        <div class="signup-container">
            <h1 class="SignHead">Login On WanderLust</h1>
            <form action="/login" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="username" class="sinLbl form-label">Username</label>
                    <input type="text" id="username" name="username" placeholder="Enter your username"
                        class="signInp form-control" required>
                    <div class="valid-feedback">Looks good.</div>
                    <div class="invalid-feedback">Please enter a username !</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="sinLbl form-label">Password</label>
                    <input type="password" id="password" name="password" placeholder="Enter your password"
                        class="signInp form-control" required>
                    <div class="valid-feedback">Looks good.</div>
                    <div class="invalid-feedback">Please enter a valid password !</div>
                </div>
                <button class="signBtn">Login</button>
            </form>
            <p class="signup-link">If you don't have an account? <a href="/signup">SignUp here</a></p>
        </div>
    </div>